<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Order Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AdminOrderNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/AdminOrderNumber"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AdminOrderTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AdminOrderTotal"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AdminOrderItemCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AdminOrderItemCountText"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/AdminOrderItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AdminOrderItemCount"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AdminOrderSubTotalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/AdminOrderSubTotalText"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/AdminOrderSubTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AdminOrderSubTotal"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/AdminOrderTaxText"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/AdminOrderTaxText"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/AdminOrderTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AdminOrderTax"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/AdminOrderTimesTamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/AdminOrderTimesTamp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/AdminOrderUDID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/AdminOrderUDID"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <Button
            android:id="@+id/BottenAdminOrder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:text="@string/BottenAdminOrder"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


















































































