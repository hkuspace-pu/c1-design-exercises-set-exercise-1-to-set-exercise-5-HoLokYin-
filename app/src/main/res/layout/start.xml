<?xml version="1.0" encoding="utf-8"?>
<!-- xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">


    <ImageView
        android:id="@+id/StartPageBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.50"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/StartPageIcon"
        android:layout_width="301dp"
        android:layout_height="308dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/sushihub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonStartPageStart"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/red"
        android:paddingTop="12dp"
        android:text="@string/ButtonStartPageStart"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/StartPageIcon"/>

    <Button
        android:id="@+id/ButtonStartPageClose"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="156dp"
        android:backgroundTint="@color/black"
        android:paddingTop="12dp"
        android:text="@string/ButtonStartPageClose"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/StartPageIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>